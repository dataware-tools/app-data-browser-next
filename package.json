{
  "name": "app-data-browser",
  "engines": {
    "node": "16",
    "engine": "8"
  },
  "volta": {
    "node": "16.13.1"
  },
  "version": "0.0.0",
  "basePath": "/data-browser/",
  "repository": "https://github.com/dataware-tools/app-data-browser-next",
  "scripts": {
    "dev": "vite --open",
    "build": "vite build; cp serve.json dist",
    "start": "serve dist -p 3000 -s",
    "test": "run-s lint test:unit test:build test:visual-regression",
    "lint": "run-s lint:eslint lint:tsc",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit --project tsconfig.json",
    "test:unit": "jest",
    "test:visual-regression": "build-storybook --quiet && loki --requireReference --reactUri file:./storybook-static",
    "format": "prettier --write src/*",
    "test:build": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" run-s build",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "prepare": "husky install"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.8.0",
    "@dataware-tools/api-file-provider-client": "^1.7.1",
    "@dataware-tools/api-job-store-client": "^1.4.0",
    "@dataware-tools/api-meta-store-client": "^0.5.3",
    "@dataware-tools/api-permission-manager-client": "^0.2.2",
    "@dataware-tools/app-common": "^22.3.10",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/lab": "^5.0.0-alpha.64",
    "@mui/material": "^5.2.8",
    "@mui/styles": "^5.2.3",
    "@mui/x-data-grid": "^5.2.2",
    "fast-deep-equal": "^3.1.3",
    "immer": "^9.0.12",
    "papaparse": "^5.3.1",
    "pigeon-maps": "^0.19.7",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-csv-downloader": "^2.7.1",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.22.5",
    "react-json-view": "^1.21.3",
    "react-markdown": "^7.1.2",
    "react-player": "^2.9.0",
    "react-router-dom": "^6.2.1",
    "react-syntax-highlighter": "^15.4.5",
    "recoil": "^0.5.2",
    "serve": "^12.0.1",
    "swr": "^1.1.2",
    "wavesurfer.js": "^5.2.0"
  },
  "devDependencies": {
    "@dataware-tools/dev-deps-for-apps": "^0.0.0-alpha4",
    "@types/jest": "^27.4.0",
    "@types/papaparse": "^5.3.1",
    "@types/react": "^17.0.38",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/wavesurfer.js": "^5.2.2"
  }
}
